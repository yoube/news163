<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBar_heigth"
            android:background="@color/color_read"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                />
        <ImageView
                android:id="@+id/fragment_news_optsions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_moreoverflow"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_menu_info"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/fragment_news_optsions"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <ImageView
                android:id="@+id/fragment_news_add_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/biz_news_column_edit_arrow_down"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                />
        <HorizontalScrollView
                android:id="@+id/fragment_news_horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_toLeftOf="@id/fragment_news_add_img"
                >
                <RadioGroup
                        android:id="@+id/fragment_news_radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                    <RadioButton
                            android:id="@+id/news_scroll_newstop"
                            style="@style/news_item_style"
                            android:text="头条"
                            />
                    <RadioButton
                            android:id="@+id/news_scroll_yule"
                            style="@style/news_item_style"
                            android:text="娱乐"
                            />
                    <RadioButton
                            android:id="@+id/news_scroll_tiyu"
                            android:text="体育"
                            style="@style/news_item_style"
                            />
                    <RadioButton
                            android:id="@+id/news_scroll_caijing"
                            style="@style/news_item_style"
                            android:text="财经"
                            />
                    <RadioButton
                            android:id="@+id/news_scroll_keji"
                            style="@style/news_item_style"
                            android:text="科技"
                            />
                    <RadioButton
                            style="@style/news_item_style"
                            android:text="汽车"
                            />
                    <RadioButton
                            style="@style/news_item_style"
                            android:text="时尚"
                            />
                </RadioGroup>

        </HorizontalScrollView>
        <TextView android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/color_boder_huei"
                  android:layout_alignParentBottom="true"
                />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
            android:id="@+id/news_vewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

    </android.support.v4.view.ViewPager>

</LinearLayout>