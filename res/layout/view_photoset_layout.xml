<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#FFFFFF"
        >

    <TextView
            android:id="@id/news_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="@dimen/news_title_find_size"
            android:textColor="@color/news_title_find_color"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/news_title_text"
            android:orientation="horizontal"
            >
        <ImageView
                android:id="@+id/news_list_photoset_1"
                android:layout_width="match_parent"
                style="@style/news_photoset_itme_style"
                />
        <ImageView
                android:id="@+id/news_list_photoset_2"
                android:layout_width="match_parent"
                style="@style/news_photoset_itme_style"
                />
        <ImageView
                android:id="@+id/news_list_photoset_3"
                android:layout_width="match_parent"
                style="@style/news_photoset_itme_style"
                />
    </LinearLayout>


</RelativeLayout>